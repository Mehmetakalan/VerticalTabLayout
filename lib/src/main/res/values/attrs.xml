<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerticalTabLayout">
        <!-- indicator config -->
        <attr name="anim_duration" format="integer" />
        <attr name="indicator_color" format="color" />
        <attr name="indicator_padding" format="dimension" />
        <attr name="indicator_paddingStart" format="dimension" />
        <attr name="indicator_paddingTop" format="dimension" />
        <attr name="indicator_paddingEnd" format="dimension" />
        <attr name="indicator_paddingBottom" format="dimension" />
        <attr name="indicator_width" format="dimension" />
        <attr name="indicator_corners" format="dimension" />
        <attr name="indicator_gravity" format="enum">
            <enum name="left" value="100" />
            <enum name="right" value="101" />
            <enum name="fill" value="102" />
        </attr>
        <!-- tabLayout config -->
        <attr name="tab_margin" format="dimension" />
        <attr name="tab_mode" format="enum">
            <enum name="fixed" value="10" />
            <enum name="scrollable" value="11" />
        </attr>
        <!-- tab config -->
        <attr name="tab_padding" format="dimension" />
        <attr name="tab_paddingStart" format="dimension" />
        <attr name="tab_paddingTop" format="dimension" />
        <attr name="tab_paddingEnd" format="dimension" />
        <attr name="tab_paddingBottom" format="dimension" />
        <attr name="tab_height" format="dimension" />
        <attr name="tab_textSize" format="dimension" />
        <attr name="tab_textColor" format="color" />
        <attr name="tab_textSelectedColor" format="color" />
    </declare-styleable>
</resources>